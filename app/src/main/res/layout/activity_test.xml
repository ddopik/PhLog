<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/main_fragment_bottom_space"
    >

    <com.example.softmills.phlog.base.widgets.CustomRecyclerView
        android:id="@+id/photographer_following_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:orientation="vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text=" TExt Text"
        android:textColor="@color/colorRed"
        android:textSize="@dimen/text_medium_s" />

    <ProgressBar
        android:id="@+id/photographer_following_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>