<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/item_card_corner_radius"
    app:cardElevation="@dimen/item_card_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/earning_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_card_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/earning_img"
            android:layout_width="@dimen/icon_view_holder_size_m"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:scaleType="fitXY"
            tools:src="@drawable/default_campaign_header_view" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"

            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/earning_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded_font"
                android:textColor="@color/text_input_color"
                android:textSize="@dimen/font_normal"
                tools:text="Price :" />

            <TextView
                android:id="@+id/earning_buyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded_font"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                tools:text="buyer name :" />

            <TextView
                android:id="@+id/earning_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                tools:text="5*5" />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>