<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp8"
    android:background="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/following_container"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/following_card_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/followers_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:layout_gravity="center"
            android:src="@drawable/phlog_logo" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center|start">

            <TextView
                android:id="@+id/followers_full_name"
                android:fontFamily="@font/arial_rounded_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_s"
                tools:text="full name here" />

            <TextView
                android:id="@+id/followers_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginBottom="@dimen/dp4"
                android:textColor="@color/black"
                tools:text="user name here" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    tools:text="125 followers" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    tools:text="176 k following" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/photos_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    tools:text="202 photo" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>