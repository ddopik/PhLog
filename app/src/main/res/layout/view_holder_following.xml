<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/followers_img"
            android:layout_width="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:background="@color/colorRed"
            tools:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/followers_full_name"
                android:fontFamily="@font/arial_rounded_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="full name here" />

            <TextView
                android:id="@+id/followers_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="user name here" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_very_small"
                    tools:text="125 followers" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_very_small"
                    tools:text="176 k following" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp12"
                    android:layout_margin="2dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/photos_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_very_small"
                    tools:text="202 photo" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>