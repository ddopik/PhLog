<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/slides_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:paddingBottom="18dp">

        <com.bikomobile.circleindicatorpager.CircleIndicatorPager
            android:id="@+id/circle_indicator_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ci_drawable="@drawable/circle_indicator_selected"
            app:ci_drawable_unselected="@drawable/circle_indicator_unselected"
            app:ci_height="7dp"
            app:ci_width="7dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/circle_indicator_pager"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounder_button"
                android:text="@string/sign_in"
                android:textColor="@color/colorWhite" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounder_button"
                android:text="@string/sign_up"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>


