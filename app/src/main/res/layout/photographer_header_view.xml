<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photographer_profile_main_preview_height">

    <ImageView
        android:id="@+id/photographer_profile_background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_photographer_profile" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:background="@drawable/graduant_layer" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/profile_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/widgets_padding">

            <ImageView
                android:id="@+id/earning_btn"
                android:layout_width="@dimen/icon_view_holder_size_s"
                android:layout_height="@dimen/icon_view_holder_size_s"
                android:layout_gravity="start"
                android:src="@drawable/ic_earning" />



        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/photographer_profile_img"
            android:layout_width="@dimen/header_img_size"
            android:layout_height="@dimen/header_img_size"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/phlog_logo" />


        <TextView
            android:id="@+id/photographer_profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp18"
            android:layout_marginBottom="@dimen/dp10"
            android:fontFamily="@font/arial_rounded_font"
            android:text="@string/full_name"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/photographer_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@drawable/rounded_frame_btn"
            android:padding="@dimen/dp4"
            android:text="@string/user_name"
            android:textColor="@color/white" />

        <RatingBar
            android:id="@+id/profile_rating"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="@dimen/user_profile_rating_bar_width"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/photographer_level"
            android:background="@drawable/level_background"
            android:padding="@dimen/widgets_padding_s"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/widgets_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/photos_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_s"
                tools:text="101" />

            <TextView
                android:id="@+id/total_photos_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_btn_white_btn"
                android:padding="@dimen/dp6"
                android:text="@string/total_photos"
                android:textAlignment="center"
                android:textColor="@color/gray45494E" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_toStartOf="@+id/following_tag_container"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@id/followers_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_s"
                tools:text="56" />

            <TextView
                android:id="@+id/followers_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_btn_white_btn"
                android:padding="@dimen/dp6"
                android:text="@string/followers"
                android:textAlignment="center"
                android:textColor="@color/gray45494E"
                tools:ignore="RelativeOverlap" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/following_tag_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/following_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_s"
                tools:text="56" />

            <TextView
                android:id="@+id/following_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_frame_btn_white_btn"
                android:padding="@dimen/dp6"
                android:text="@string/following"
                android:textAlignment="center"
                android:textColor="@color/gray45494E" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>