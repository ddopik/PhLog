<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_profile_background_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >


    <LinearLayout
        android:id="@+id/campaign_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp12"
        tools:background="@drawable/splash_screen_background">

        <TextView
            android:id="@+id/campaign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_rounded_font"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title_head"
            tools:text="campaign" />

        <TextView
            android:id="@+id/campaign_hosted_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/gray400"
            tools:text="Hosted by" />

        <TextView
            android:id="@+id/campaign_day_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star_off_24dp"
            android:textColor="@color/gray400"
            tools:text="5 day left" />



    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp4"
        android:padding="@dimen/dp12"
        android:background="@color/transparent"
        app:srcCompat="@drawable/ic_share_black_24dp" />


</FrameLayout>