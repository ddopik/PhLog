<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/all_photographer_photo_top_bar"
        layout="@layout/phlog_app_bar" />

    <com.example.softmills.phlog.base.widgets.CustomRecyclerView
        android:id="@+id/saved_photos_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_photographer_photo_top_bar"
        app:orientation="grid"
        app:span_size="3"/>

    <ProgressBar
        android:id="@+id/saved_photos_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>

