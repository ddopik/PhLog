<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="?actionBarSize">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp45"
        android:layout_marginEnd="@dimen/dp45"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/item_card_corner_radius"
        app:cardElevation="@dimen/item_card_elevation">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp80"
            android:orientation="vertical">

            <com.example.softmills.phlog.base.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="@dimen/earning_widget_start"
                android:paddingTop="@dimen/earning_widget_height"
                android:paddingBottom="@dimen/earning_widget_height"
                android:text="@string/sale_info"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/gray200"
                android:orientation="vertical"
                android:padding="@dimen/widgets_padding">

                <com.example.softmills.phlog.base.widgets.CustomTextView
                    android:id="@+id/earning_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="ID  : 40%" />

                <com.example.softmills.phlog.base.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="@string/user_id_sale"
                    android:textSize="@dimen/font_small" />


            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/earning_widget_height"
                    android:paddingBottom="@dimen/earning_widget_height">

                    <com.example.softmills.phlog.base.widgets.CustomTextView
                        android:id="@+id/earning_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/earning_widget_start"
                        android:textSize="@dimen/font_normal"
                        tools:text="Crested at : 5/11/2016" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/earning_widget_start">

                        <com.example.softmills.phlog.base.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/arial_rounded_font"
                            android:text="@string/by"
                            android:textSize="@dimen/font_normal" />

                        <com.example.softmills.phlog.base.widgets.CustomTextView
                            android:id="@+id/created_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp8"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium_s"
                            android:textStyle="bold"
                            tools:text="Omar" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/earning_widget_start">

                        <com.example.softmills.phlog.base.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exclusive" />

                        <com.example.softmills.phlog.base.widgets.CustomTextView
                            android:id="@+id/earning_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp4"
                            tools:text="yes" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/earning_item_img"
                    android:layout_width="@dimen/dp65"
                    android:layout_height="@dimen/dp65"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="@dimen/dp18"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_error_img" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@color/gray200"
                android:paddingTop="@dimen/dp4"
                android:paddingBottom="@dimen/dp4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/earning_widget_start">

                    <com.example.softmills.phlog.base.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_font"

                        android:text="@string/buyer"
                        android:textSize="@dimen/font_normal" />

                    <com.example.softmills.phlog.base.widgets.CustomTextView
                        android:id="@+id/buyer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_large"
                        tools:text="ddopik" />


                    <com.example.softmills.phlog.base.widgets.CustomTextView
                        android:id="@+id/buyer_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp2"
                        android:fontFamily="@font/arial_rounded_font"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="bold"
                        tools:text="user_softMaills.com" />

                    <com.example.softmills.phlog.base.widgets.CustomTextView
                        android:id="@+id/buyer_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp2"

                        android:textColor="@color/black"
                        android:textSize="@dimen/font_normal"
                        android:textStyle="bold"
                        tools:text="011223369856" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/earning_buyer_image"
                    android:layout_width="@dimen/dp65"
                    android:layout_height="@dimen/dp65"
                    android:layout_gravity="center|end"
                    android:layout_marginEnd="@dimen/dp18"
                    android:src="@drawable/default_place_holder" />
            </FrameLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/sqare_corener"
            android:padding="@dimen/dp10">

            <com.example.softmills.phlog.base.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp8"
                android:text="@string/price"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_s" />

            <com.example.softmills.phlog.base.widgets.CustomTextView
                android:id="@+id/earning_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp8"
                android:fontFamily="@font/segoe_b"
                android:textAllCaps="false"
                android:textColor="@color/white"
                tools:text="50$" />

        </FrameLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>