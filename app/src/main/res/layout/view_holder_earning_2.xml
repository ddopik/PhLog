<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:.3"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/earning_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/earning_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".75"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/default_campaign_header_view" />

            <TextView
                android:id="@+id/earning_price2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/arial_rounded_font"
                android:gravity="start|center"
                android:lines="1"
                android:text="@string/earning_price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/font_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toEndOf="@+id/earning_img"
                app:layout_constraintTop_toTopOf="@+id/earning_img" />

            <TextView
                android:id="@+id/earning_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/arial_rounded_font"
                android:gravity="start|center"
                android:lines="1"
                android:textColor="@color/text_input_color"
                android:textSize="@dimen/font_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toEndOf="@+id/earning_price2"
                app:layout_constraintTop_toTopOf="@+id/earning_img" />

            <TextView
                android:id="@+id/earning_buyer2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/arial_rounded_font"
                android:textStyle="bold"
                android:gravity="start|center"
                android:lines="1"
                android:text="@string/earning_buyer"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintStart_toStartOf="@+id/earning_price2"
                app:layout_constraintTop_toBottomOf="@+id/earning_price" />

            <TextView
                android:id="@+id/earning_buyer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/arial_rounded_font"
                android:gravity="start|center"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toEndOf="@+id/earning_buyer2"
                app:layout_constraintTop_toBottomOf="@+id/earning_price" />

            <TextView
                android:id="@+id/earning_size"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="start|center"
                android:lines="1"
                android:textSize="@dimen/font_normal"
                app:layout_constraintBottom_toBottomOf="@+id/earning_img"
                app:layout_constraintHeight_percent=".25"
                app:layout_constraintStart_toStartOf="@+id/earning_buyer2"
                app:layout_constraintTop_toBottomOf="@+id/earning_buyer"
                tools:text="5*5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray400"/>
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>