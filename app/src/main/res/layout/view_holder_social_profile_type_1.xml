<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_holder_item_list_height_med"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/item_card_corner_radius"
    app:cardElevation="@dimen/item_card_elevation">

    <LinearLayout
        android:id="@+id/social_profile_type_1_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/widgets_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/social_profile_type_1_icon_img"
                android:layout_width="@dimen/icon_view_holder_size_s"
                android:layout_height="@dimen/icon_view_holder_size_s"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp4"
                tools:src="@drawable/default_user_pic" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp16">

                <com.example.softmills.phlog.base.widgets.CustomTextView
                    android:id="@+id/social_profile_type_1_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    tools:text="Brand text" />

                <com.example.softmills.phlog.base.widgets.CustomTextView
                    android:id="@+id/social_profile_type_1_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="user name" />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp4">

            <ImageView
                android:id="@+id/social_profile_type_1_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_photographer_profile" />

            <Button
                android:id="@+id/follow_social_type_1_profile"
                android:layout_width="@dimen/campaign_home_button_width"
                android:layout_height="@dimen/campaign_button_size"
                android:fontFamily="@font/segoe_sb"
                android:background="@drawable/rounded_campaign_button"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/dp14"
                android:text="@string/join"
                android:textColor="@color/white" />

        </FrameLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>