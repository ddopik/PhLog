<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/item_card_corner_radius"
        app:cardElevation="@dimen/ef_toolbar_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent=".8">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp80"
            android:orientation="vertical"

            android:paddingTop="@dimen/widgets_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_rounded_font"
                android:gravity="center|start"
                android:paddingStart="@dimen/earning_widget_start"
                android:paddingTop="@dimen/earning_widget_height"
                android:paddingBottom="@dimen/earning_widget_height"
                android:text="@string/sale_info"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@color/gray200">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/earning_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_font"
                        android:paddingStart="@dimen/earning_widget_start"
                        tools:text="ID  : 40%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded_font"
                        android:paddingStart="@dimen/earning_widget_start"
                        android:textSize="@dimen/font_small"
                        android:text="@string/user_id_sale" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/earning_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center|end"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_error_img" />
            </FrameLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:orientation="vertical"
                android:paddingTop="@dimen/earning_widget_height"
                android:paddingBottom="@dimen/earning_widget_height">

                <TextView
                    android:id="@+id/earning_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_font"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="Crested at : 5/11/2016"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/earning_widget_start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/arial_rounded_font"
                        android:text="@string/by"
                        android:textSize="@dimen/font_normal" />

                    <TextView
                        android:id="@+id/created_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dp8"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_large"
                        android:textStyle="bold" />


                </LinearLayout>

                <TextView
                    android:id="@+id/earning_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="@string/exclusive"
                    android:textColor="@color/text_input_color"
                    tools:text="Exlusive" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:background="@color/gray200"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp4"
                android:paddingBottom="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_rounded_font"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="@string/buyer"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:id="@+id/buyer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp2"
                    android:fontFamily="@font/arial_rounded_font"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="ddopik"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_large" />


                <TextView
                    android:id="@+id/buyer_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp2"
                    android:fontFamily="@font/arial_rounded_font"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="user_softMaills.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buyer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp2"
                    android:fontFamily="@font/arial_rounded_font"
                    android:paddingStart="@dimen/earning_widget_start"
                    android:text="011223369856"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/sqare_corener"
            android:padding="@dimen/widgets_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/dp8"
                android:text="@string/price"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/earning_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp8"
                android:textColor="@color/white"
                tools:text="50$" />

        </FrameLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>