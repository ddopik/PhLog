<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
        android:id="@+id/photographer_following_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_background"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="enterAlways"
        app:tabSelectedTextColor="@color/text_input_color"
        app:tabTextColor="@color/white" />

    <com.example.softmills.phlog.base.widgets.CustomRecyclerView

        android:id="@+id/campaigns_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:orientation="vertical" />

</RelativeLayout><!--android:scaleType="fitXY"-->

